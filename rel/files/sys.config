     %%    {queues, [{integer(), [{min_rate, integer()} |
     %%                           {max_rate, integer()}]}]}]]
     %% * Sample port entries:
     {1, [
          {rate, {100, kibps}},
          {queues, [{0, [{max_rate, 90}]}]}
         ]},
     {2, [
          {rate, {100, kibps}},
          {queues, [{0, [{max_rate, 90}]}]}
